{
  "multipart": [
    {
      "when": { "facing": "north", "type": "left" },
      "apply": { "model": "potions_ld:block/alchemy_table_base" }
    },
    {
      "when": { "facing": "east", "type": "left" },
      "apply": { "model": "potions_ld:block/alchemy_table_base", "y": 90 }
    },
    {
      "when": { "facing": "south", "type": "left" },
      "apply": { "model": "potions_ld:block/alchemy_table_base", "y": 180 }
    },
    {
      "when": { "facing": "west", "type": "left" },
      "apply": { "model": "potions_ld:block/alchemy_table_base", "y": 270 }
    },
    {
      "when": { "type": "right" },
      "apply": { "model": "potions_ld:block/empty" }
    },
    {
      "when": { "has_speed_upgrade": "true", "type": "left", "facing": "north" },
      "apply": { "model": "potions_ld:block/upgrade_speed" }
    },
    {
      "when": { "has_speed_upgrade": "true", "type": "left", "facing": "east" },
      "apply": { "model": "potions_ld:block/upgrade_speed", "y": 90 }
    },
    {
      "when": { "has_speed_upgrade": "true", "type": "left", "facing": "south" },
      "apply": { "model": "potions_ld:block/upgrade_speed", "y": 180 }
    },
    {
      "when": { "has_speed_upgrade": "true", "type": "left", "facing": "west" },
      "apply": { "model": "potions_ld:block/upgrade_speed", "y": 270 }
    },
    {
      "when": { "has_speed_upgrade": "false", "type": "left", "facing": "north" },
      "apply": { "model": "potions_ld:block/base_cauldron" }
    },
    {
      "when": { "has_speed_upgrade": "false", "type": "left", "facing": "east" },
      "apply": { "model": "potions_ld:block/base_cauldron", "y": 90 }
    },
    {
      "when": { "has_speed_upgrade": "false", "type": "left", "facing": "south" },
      "apply": { "model": "potions_ld:block/base_cauldron", "y": 180 }
    },
    {
      "when": { "has_speed_upgrade": "false", "type": "left", "facing": "west" },
      "apply": { "model": "potions_ld:block/base_cauldron", "y": 270 }
    },
    {
      "when": { "has_efficiency_upgrade": "true", "type": "left", "facing": "north" },
      "apply": { "model": "potions_ld:block/upgrade_efficiency" }
    },
    {
      "when": { "has_efficiency_upgrade": "true", "type": "left", "facing": "east" },
      "apply": { "model": "potions_ld:block/upgrade_efficiency", "y": 90 }
    },
    {
      "when": { "has_efficiency_upgrade": "true", "type": "left", "facing": "south" },
      "apply": { "model": "potions_ld:block/upgrade_efficiency", "y": 180 }
    },
    {
      "when": { "has_efficiency_upgrade": "true", "type": "left", "facing": "west" },
      "apply": { "model": "potions_ld:block/upgrade_efficiency", "y": 270 }
    },
    {
      "when": { "has_fortune_upgrade": "true", "type": "left", "facing": "north" },
      "apply": { "model": "potions_ld:block/upgrade_fortune" }
    },
    {
      "when": { "has_fortune_upgrade": "true", "type": "left", "facing": "east" },
      "apply": { "model": "potions_ld:block/upgrade_fortune", "y": 90 }
    },
    {
      "when": { "has_fortune_upgrade": "true", "type": "left", "facing": "south" },
      "apply": { "model": "potions_ld:block/upgrade_fortune", "y": 180 }
    },
    {
      "when": { "has_fortune_upgrade": "true", "type": "left", "facing": "west" },
      "apply": { "model": "potions_ld:block/upgrade_fortune", "y": 270 }
    }
  ]
}
